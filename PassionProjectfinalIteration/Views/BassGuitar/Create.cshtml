@model PassionProjectfinalIteration.ViewModels.BassGuitarViewModel

@{
    ViewBag.Title = "Create Bass Guitar";
}

<h2>Create Bass Guitar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @* Color field *@
        @Html.LabelFor(model => model.Color)
        @Html.TextBoxFor(model => model.Color, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Color, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @* NumberOfStrings field *@
        @Html.LabelFor(model => model.NumberOfStrings)
        @Html.TextBoxFor(model => model.NumberOfStrings, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.NumberOfStrings, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @* Model field *@
        @Html.LabelFor(model => model.Model)
        @Html.TextBoxFor(model => model.Model, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @* Manufacturer field *@
        @Html.LabelFor(model => model.Manufacturer)
        @Html.TextBoxFor(model => model.Manufacturer, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Manufacturer, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @* CategoryID field (Dropdown list) *@
        @Html.LabelFor(model => model.CategoryID)
        @Html.DropDownListFor(model => model.CategoryID, new SelectList(Model.AvailableCategories, "ID", "CategoryName"), "Select Category", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @* Submit button and cancel link *@
        <input type="submit" value="Create" class="btn btn-primary" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
    </div>
}
